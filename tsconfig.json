{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "config.d.ts",
    "app.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}